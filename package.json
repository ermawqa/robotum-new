{
  "name": "robotum-frontend",
  "homepage": "https://ermawqa.github.io/robotum-frontend/",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend codebase for RoboTUM â€” a student-led robotics club. Built with React + Tailwind CSS. Designed to be fast, modular, and easy to scale.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "rebuild": "npm run clean && npm run build",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules && npm install",
    "format": "eslint . --fix --fix-type=layout",
    "format:check": "eslint . --max-warnings=0",
    "format:prettier": "prettier --write .",
    "depcheck": "depcheck --ignores='@tailwindcss/postcss' --skip-missing",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:cov": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "build:clean": "npm run build && npm run css:purge",
    "css:purge": "purgecss --css 'dist/assets/*.css' --content 'index.html' 'src/**/*.{js,jsx}' --safelist 'html,body,#root,nav,section,header,footer' --output dist/assets",
    "css:report": "purgecss --css 'dist/assets/*.css' --content 'index.html' 'src/**/*.{js,jsx}' --rejected --output dist/purged && echo 'See dist/purged for purged CSS; rejected selectors are printed above.'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ermawqa/robotum-frontend.git"
  },
  "keywords": [],
  "author": "Yermukhamed Shakhman <yermukhamed.shakhman@robotum.info>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ermawqa/robotum-frontend/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "purgecss": "^7.0.2",
    "vite": "^5.4.10",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "emailjs-com": "^3.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4"
  }
}
